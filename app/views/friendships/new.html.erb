<div class="container">

  <section class="sidebar">
    <h1>invite a friend</h1>

    <form id="friend_request" action="/users/1/friendships/" method="post">
      <label for="friend_name">Friend name:</label>
      <input type="text" name="friend_name">
      <input type="submit" value="invite friend">
    </form>
  </section>

  <main class="friend">
    <div class="sign-text-wrap">
      <div class="sign-text">

        <% if @friends %>
          <span><%= @friends %></span>
        <% end %>

      </div>
    </div>
  </main>
</div>
