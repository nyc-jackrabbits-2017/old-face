<h2>Make a Post on this Wall</h2>
  <%= form_for([@user, @user.wall_posts.build]) do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.hidden_field :receiver_id, :value => @user.id %>
    <p>
      <%= f.submit %>
    </p>
    <% end %>



